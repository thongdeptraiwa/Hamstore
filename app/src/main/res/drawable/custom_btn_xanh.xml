    <!-- button_inner_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Shape nền của button -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#92D53E" />
        <corners android:radius="30dp" />
    </shape>
</item>
<!-- Shape của đổ bóng bên trong button -->
<item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
    <shape android:shape="rectangle">
        <solid android:color="#33000000" /> <!-- Màu của đổ bóng -->
        <corners android:radius="26dp" />
    </shape>
</item>
</layer-list>